# app/models/like.rb
class Like < ApplicationRecord
  # Establecer la conexión con la base de datos 'reactionsdb'
  establish_connection :reactionsdb

  # Definir la tabla de la base de datos
  self.table_name = 'Likes'

  # Definir la clave primaria
  self.primary_key = 'id'  # Asegúrate de que el id sea un UUID en la base de datos

  # Definir los tipos de los campos para los castings
  def self.attribute_types
    {
      'id' => :uuid,
      'postId' => :uuid,
      'responsableId' => :uuid,
      'createdAt' => :datetime
    }
  end

end
