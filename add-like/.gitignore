# Ignore bundler config.
.bundle

# Ignore all environment files.
.env*

# Ignore all logfiles and tempfiles.
log/*
tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory.
tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore storage (uploaded files in development and any SQLite databases).
storage/*
!/storage/.keep
tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# Ignore master key for decrypting credentials and more.
config/master.key

# Ignore default files
*.log
*.pid
*.bak
*.swp
*.swo

# Ignore .env file (contains sensitive credentials)
.env

# Ignore system files
.DS_Store
Thumbs.db

# Ignore the database folder (if local DB is used)
db/*.sqlite3
db/*.sqlite3-journal

# Ignore the test folder if it is not needed (can be used in some projects)
test/

# Ignore temporary files
/tmp
/storage

# Ignore coverage folder (used by testing tools like SimpleCov)
coverage/

# Ignore by default files generated by Rails or Bundler
vendor/bundle
vendor/cache
node_modules

# Ignore any secret keys
config/credentials.yml.enc
config/master.key

# Ignore the public folder (contains assets compiled for production)
public/packs
public/packs-test

# Ignore logs
log/

db/
script/
lib/*
.github/


# Ignore script files (generated by Rails)
script/*

# Ignore database schema and seed files (these are often not shared)
db/schema.rb
db/structure.sql
db/seeds.rb

# Ignore lib directory if contains generated code
lib/*
!/lib/.keep
